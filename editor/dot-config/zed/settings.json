// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "show_completions_on_input": false,
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "show_edit_predictions": true,
  "git_panel": {
    "dock": "right"
  },
  "base_keymap": "VSCode",
  "icon_theme": "Catppuccin Mocha",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet"
    },
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "theme": "Catppuccin Mocha - No Italics",

  // Vim
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "highlight_on_yank_duration": 300
  },

  "tab_bar": {
    "show": true
  },

  "languages": {
    "TypeScript": {
      "format_on_save": "prettier"
    }
  },
  "scrollbar": {
    "show": "never"
  },
  // Only show error on tab
  "tabs": {
    "show_diagnostics": "errors"
  },

  "vertical_scroll_margin": 6,

  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },

  // Inlay hints preconfigured by Zed: Go, Rust, Typescript and Svelte
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": false,
    "show_parameter_hints": false
  },

  "diagnostics": {
    "include_warnings": false,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },

  "relative_line_numbers": true,

  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    }
  },

  // Font UI
  "ui_font_size": 18,
  "buffer_font_size": 14,
  "buffer_font_weight": 600,
  "buffer_font_family": "GeistMono Nerd Font",
  "buffer_font_fallbacks": ["Noto Color Emoji"],
  "buffer_font_features": {},

  "cursor_blink": false,
  "terminal": {
    "font_family": "Mononoki Nerd Font Mono",
    "font_fallbacks": ["Hack Nerd Font", "Noto Color Emoji"],
    "font_size": 12,
    "font_features": {},
    "shell": {
      "with_arguments": {
        "program": "/bin/fish",
        "args": []
      }
    }
  },
  // File scan exclusions, hide on the file explorer and search
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules",
    "**/.wrangler"
  ],

  // Turn off telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // Move all panel to the right
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "left"
  },
  // Move some unnecessary panels to the left
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  }
}
